#!/usr/bin/env goby_launch

# start the simulator
[kill=SIGTERM] goby_basic_frontseat_simulator 54321

# start the Goby processes
gobyd auv_config/gobyd.pb.cfg -vvv
goby_frontseat_interface_basic_simulator auv_config/frontseat.pb.cfg
goby_liaison auv_config/liaison.pb.cfg
goby3_course_nav_manager auv_config/nav_manager.pb.cfg -vvv

# start the MOOS-IvP alpha mission
[kill=SIGTERM] MOOSDB auv_config/alpha.moos
[kill=SIGTERM] pHelmIvP auv_config/alpha.moos
[kill=SIGTERM] pMarineViewer auv_config/alpha.moos
[kill=SIGTERM] uProcessWatch auv_config/alpha.moos
[kill=SIGTERM] pNodeReporter auv_config/alpha.moos
