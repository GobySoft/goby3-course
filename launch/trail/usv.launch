#!/usr/bin/env goby_launch

# start the simulator
[kill=SIGTERM] goby_basic_frontseat_simulator 54321

# start the Goby processes
gobyd <(./trail_usv.pb.cfg.py gobyd)
goby_frontseat_interface_basic_simulator <(./trail_usv.pb.cfg.py goby_frontseat_interface_basic_simulator)
goby_liaison <(./trail_usv.pb.cfg.py goby_liaison)
goby3_course_nav_manager <(./trail_usv.pb.cfg.py goby3_course_nav_manager)

# start the MOOS-IvP alpha mission
[kill=SIGTERM] ./moos_gen.sh usv
[kill=SIGTERM] MOOSDB /tmp/usv.moos
[kill=SIGTERM] pHelmIvP /tmp/usv.moos
[kill=SIGTERM] pMarineViewer /tmp/usv.moos
[kill=SIGTERM] uProcessWatch /tmp/usv.moos
[kill=SIGTERM] pNodeReporter /tmp/usv.moos
